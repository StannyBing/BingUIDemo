<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/_dialog_out_anim</item>
    </style>

    <style name="BUIButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/mybutton_shape</item>
    </style>

    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BUICheckBox">
        <attr name="isChecked" />
        <attr name="color_checked" />
        <attr name="color_unchecked" format="color" />
        <attr name="check_text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="check_radius" format="dimension" />
        <attr name="check_anim" format="boolean" />
        <attr name="check_clickable" format="boolean" />
        <attr name="check_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BUISwitch">
        <attr name="isChecked" />
        <attr name="color_checked" />
        <attr name="switch_height" format="dimension"/>
        <attr name="switch_width" format="dimension"/>
        <attr name="ball_padding" format="dimension"/>
    </declare-styleable>
    <!--    公用属性-->
    <attr name="isChecked" format="boolean" />
    <attr name="color_checked" format="color" />
</resources>
