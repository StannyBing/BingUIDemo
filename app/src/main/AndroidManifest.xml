<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zx.buidemo">

    <application
            android:name="com.zx.buidemo.util.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.zx.buidemo.ui.BUIButtonActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.zx.buidemo.ui.BUIDialogActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.zx.buidemo.ui.BUICheckBoxActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.zx.buidemo.ui.BUISwitchActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="com.zx.buidemo.MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>